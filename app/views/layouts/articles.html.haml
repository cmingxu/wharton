!!! 5
%html{:lang => "en"}
  %head
    %meta{:charset => "utf-8"}/
    %title= content_for?(:title) ? yield(:title) : "Wharton"
    = csrf_meta_tags
    / Le HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag "http://html5shim.googlecode.com/svn/trunk/html5.js"
    / Le styles
    = stylesheet_link_tag "application", :media => "all"
    / Le fav and touch icons
    %link{:href => "images/favicon.ico", :rel => "shortcut icon"}/
    %link{:href => "images/apple-touch-icon.png", :rel => "apple-touch-icon"}/
    %link{:href => "images/apple-touch-icon-72x72.png", :rel => "apple-touch-icon", :sizes => "72x72"}/
    %link{:href => "images/apple-touch-icon-114x114.png", :rel => "apple-touch-icon", :sizes => "114x114"}/


  %body
    .container
      %header
        =link_to image_tag("logo.jpg"), index_path
      .subnav
        .container
          %ul.nav.nav-pills
            %li=link_to "首页", index_path
            %li=link_to "企业简介", index_path
            %li=link_to "产品介绍", products_path
            %li.active=link_to "最新动态", articles_path
            %li=link_to "招贤纳士", job_path
            %li=link_to "联系我们", contact_path
            %li=link_to "ENGLISH", english_path


      .content
        = yield
    
    
      %br
      %footer
